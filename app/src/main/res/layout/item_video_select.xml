<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/y20"
        android:text="文件夹"
        android:textColor="@color/text_333"
        android:textSize="@dimen/y24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:padding="@dimen/y10"
        android:text="请选择视屏通道:"
        android:textColor="@color/text_666"
        android:textSize="@dimen/y20" />

    <ListView
        android:id="@+id/listview12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:background="@color/white"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:listSelector="@android:color/transparent"
        android:padding="@dimen/y10"
        android:scrollbars="none"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quxiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/gray"
            android:clickable="true"
            android:onClick="onLoginClick"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/y22" />

        <Button
            android:id="@+id/queren"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/y4"
            android:layout_weight="1"
            android:background="@color/colortitle"
            android:clickable="true"
            android:onClick="onLoginClick"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/y22" />
    </LinearLayout>
</LinearLayout>