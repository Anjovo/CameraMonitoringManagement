<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="@dimen/y20">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/y40"
            android:layout_height="@dimen/y40"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:src="@mipmap/video" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/y10"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:textSize="@dimen/y22"
            android:textColor="@color/text_333"
            android:text="通道" />

        <ImageView
            android:id="@+id/isCheck"
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/car_select_n" />
    </LinearLayout>

    <include layout="@layout/line_view"></include>

</LinearLayout>